{
  "openapi": "3.1.0",
  "info": {
    "title": "API Inventario GLPI",
    "version": "1.0.2",
    "description": "Consulta de inventario GLPI con paginación"
  },
  "servers": [
    {
      "url": "https://glpi-jntn.onrender.com"
    }
  ],
  "paths": {
    "/todos-equipos": {
      "get": {
        "operationId": "obtenerInventario",
        "summary": "Obtener inventario con paginación",
        "parameters": [
          {
            "name": "inicio",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 0 },
            "description": "Índice de inicio de la búsqueda"
          },
          {
            "name": "cantidad",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 150 },
            "description": "Cantidad de equipos a devolver"
          }
        ],
        "responses": {
          "200": {
            "description": "Equipos consultados con éxito",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "equipos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "ID": { "type": "string" },
                          "Marca": { "type": "string" },
                          "Modelo": { "type": "string" },
                          "Estado": { "type": "string" },
                          "Serial": { "type": "string" },
                          "Tipo_Dispositivo": { "type": "string" },
                          "Fecha_Asignación": { "type": "string" },
                          "Propietario": { "type": ["string", "null"] },
                          "Ubicación": { "type": "string" },
                          "Ubicación_Interna": { "type": "string" },
                          "Entidad": { "type": "string" }
                        }
                      }
                    },
                    "total": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
